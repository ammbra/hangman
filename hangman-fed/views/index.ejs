<% include partials/header.ejs %>
<div id="loginForm">
    <h3>Login</h3>
    <div class="form-group">
        <label>Username :</label>
        <input class="form-control" type="text" name="username" id="username">
    </div>
    <div class="form-group">
        <label>Login as :</label>
        <select class="form-control" type="text" name="type" id="type">
            <option value="ADMINISTRATOR">Administrator</option>
            <option value="PLAYER" aria-describedby="If you wish to play, please click player">Player</option>
        </select>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" name="login" id="login">Login</button>
    </div>
</div>

<nav class="navbar navbar-light bg-light">
    <span>
        <div class="form-group" id="startGame" style="float:left">
            <button class="btn btn-success" name="start" id="start">Start/Continue Game</button>
        </div>
         <div class="form-group" id="logoutForm" style="float:right">
            <button class="btn btn-info" name="logout" id="logout">Logout</button>
        </div>
    </span>
</nav>



<div id="gameView">
    <h4>Game Status: <span id="status"></span></h4>
    <br />
    <h4>Choose a letter to play:</h4>
    <div id="availableCharacters"></div>
    <br />
    <h4>You have <span id="attemptsLeft"></span> attempts left</h4>

    <h3>The Current Word is:  <strong><span id="visibleWord"></span></strong></h3>
    <br />
    <div class="alert alert-info" id="secretWord"></div>

</div>


<div id="adminView">
    <h1>Current Status</h1>
    <table id="playersTable" class="display">
        <thead>
        <tr>
            <th>Username</th>
            <th>Secret Word</th>
            <th>Visible Word</th>
            <th>Attempts left</th>
            <th>Game Status</th>
            <th>Game Started on</th>
            <th>Game Ended on</th>
        </tr>
        </thead>
        <tfoot>
        <tr>
            <th>Username</th>
            <th>Secret Word</th>
            <th>Visible Word</th>
            <th>Attempts left</th>
            <th>Game Status</th>
            <th>Game Started on</th>
            <th>Game Ended on</th>
        </tr>
        </tfoot>
    </table>
</div>
</div>
</div>
</body>
</html>